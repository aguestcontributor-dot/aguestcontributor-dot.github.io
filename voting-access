<body>
    <div class="container">
        <h1>Voting Access</h1>
        <p class="subtitle">Enter your 6-character access code</p>
        
        <div class="input-group">
            <input 
                type="text" 
                id="codeInput" 
                maxlength="6" 
                placeholder="ABC123"
                autocomplete="off"
            >
        </div>
        
        <button onclick="validateCode()">Submit</button>
        
        <div class="error-message" id="errorMessage"></div>
    </div>

    <script>
        // CONFIGURATION: Add your valid codes here
        const validCodes = [
            "ABC123", "DEF456", "GHI789", "JKL012", "MNO345",
            "PQR678", "STU901", "VWX234", "YZA567", "BCD890",
            "EFG123", "HIJ456", "KLM789", "NOP012", "QRS345",
            "TUV678", "WXY901", "ZAB234", "CDE567", "FGH890",
            "IJK123", "LMN456", "OPQ789", "RST012", "UVW345",
            "XYZ678", "ABC901", "DEF234", "GHI567", "JKL890",
            "MNO123", "PQR456", "STU789", "VWX012", "YZA345",
            "BCD678", "EFG901", "HIJ234", "KLM567", "NOP890",
            "QRS123", "TUV456", "WXY789", "ZAB012", "CDE345",
            "FGH678", "IJK901", "LMN234", "OPQ567", "RST890",
            "UVW123", "XYZ456", "ABC789", "DEF012", "GHI345",
            "JKL678", "MNO901", "PQR234", "STU567", "VWX890",
            "YZA123", "BCD456", "EFG789", "HIJ012", "KLM345",
            "NOP678", "QRS901", "TUV234", "WXY567", "ZAB890",
            "CDE123", "FGH456", "IJK789", "LMN012", "OPQ345",
            "RST678", "UVW901", "XYZ234", "ABC567", "DEF890",
            "GHI123", "JKL456", "MNO789", "PQR012", "STU345",
            "VWX678", "YZA901", "BCD234", "EFG567", "FGH012"
        ];
        
        // CONFIGURATION: Replace with your Google Form URL
        const googleFormUrl = "https://docs.google.com/forms/d/e/YOUR_FORM_ID/viewform";

        const input = document.getElementById('codeInput');
        const errorMsg = document.getElementById('errorMessage');

        // Auto-focus input on load
        input.focus();

        // Allow Enter key to submit
        input.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                validateCode();
            }
        });

        function validateCode() {
            const code = input.value.trim().toUpperCase();
            errorMsg.textContent = '';
            input.classList.remove('error');

            // Check if code is 6 characters
            if (code.length !== 6) {
                showError('Please enter a 6-character code');
                return;
            }

            // Check if code has already been used on this device
            if (localStorage.getItem('used_' + code)) {
                showError('This code has already been used on this device');
                return;
            }

            // Check if code is valid
            if (!validCodes.includes(code)) {
                showError('Invalid access code');
                return;
            }

            // Mark code as used and redirect
            localStorage.setItem('used_' + code, 'true');
            window.location.href = googleFormUrl;
        }

        function showError(message) {
            errorMsg.textContent = message;
            input.classList.add('error');
            input.focus();
        }
    </script>
</body>
